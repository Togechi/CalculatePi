<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Pi Calculator" Height="350" Width="525" MinWidth="525" MinHeight="350">

    <Grid MinWidth="517" MinHeight="319">
        <TextBox x:Name="outputBox" Margin="70,24,70,195" TextWrapping="Wrap" Text="OUTPUT" IsReadOnly="True" MinWidth="377" MinHeight="100" TextChanged="outputBox_TextChanged" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible"/>
        <Button x:Name="startStopButton" Content="Calculate" Margin="206,0,206,85" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="105" MinWidth="105" MinHeight="35" Click="startStopButton_Click"/>
        <TextBox x:Name="iterationsInput" ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         ScrollViewer.CanContentScroll="True" Margin="196,0,196,143" TextWrapping="Wrap" Text="5" VerticalContentAlignment="Center" Height="18" VerticalAlignment="Bottom" MinWidth="125" MinHeight="18" TextChanged="iterationsInput_TextChanged"/>
    </Grid>
</Window>
